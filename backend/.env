GOOGLE_API_KEY="your_google_api_key_here"
LANGCHAIN_API_KEY="your_langchain_api_key_here"
LANGCHAIN_TRACING_V2="true"
LANGCHAIN_ENDPOINT="https://api.smith.langchain.com"
LANGCHAIN_PROJECT="urban-planning-assistant"

MONGO_ATLAS_URI="mongodb+srv://username:password@cluster.mongodb.net/"
MONGO_DB_NAME="urban_planning_db"
MONGO_COLLECTION_NAME="documents"

NEO4J_AURA_URI="neo4j+s://your_instance_id.databases.neo4j.io"
NEO4J_USERNAME="neo4j"
NEO4J_PASSWORD="your_neo4j_password_here"

OPENWEATHER_API_KEY="your_openweather_api_key_here"
TOMTOM_API_KEY="your_tomtom_api_key_here"
WAQI_API_KEY="your_waqi_api_key_here"

# SSL Certificates
REQUESTS_CA_BUNDLE=""
SSL_CERT_FILE=""
# You might need to point these to the certifi path
# import certifi
# certifi.where()

# OAuth Configuration for Urban Planning Assistant

# Database
DATABASE_URL=postgresql://localhost:5432/urban_planning_oauth

# Dropbox OAuth (get from https://www.dropbox.com/developers/apps)
DROPBOX_CLIENT_ID=your_dropbox_client_id_here
DROPBOX_CLIENT_SECRET=your_dropbox_client_secret_here
DROPBOX_REDIRECT_URI=http://localhost:8000/oauth/dropbox/callback

# Optional: Enable debug mode
DEBUG=false

# Admin email for user folder management
ADMIN_EMAIL=your_admin_email_here

# ===== CLOUD INTEGRATION =====
# Dropbox Access Token (generate from https://www.dropbox.com/developers/apps)
DROPBOX_ACCESS_TOKEN=your_dropbox_access_token_here
# ===== iCLOUD MAIL CONFIGURATION =====
# Use your iCloud email and an app-specific password
# Generate app-specific password: https://appleid.apple.com/account/manage > Sign-In and Security > App-Specific Passwords
ICLOUD_EMAIL=your_icloud_email_here
ICLOUD_APP_PASSWORD=your_icloud_app_password_here
DROPBOX_REFRESH_TOKEN=your_dropbox_refresh_token_here
